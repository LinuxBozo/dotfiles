# Add to the $PATH
export GRAILS_HOME='/usr/local/springsource/grails-1.3.7'
export GROOVY_HOME="$(brew --prefix groovy)/libexec"
export ANDROID_HOME='/usr/local/java/android-sdk-macosx'
export ANDROID_NDK_HOME='/usr/local/java/android-ndk-r9'
export ORACLE_HOME='/usr/local/oracle'
export SONAR_RUNNER_HOME='/usr/local/sonar/sonar-runner-2.3'
export AIR_HOME='/usr/local/AIRSDK_compiler'
export GOPATH=$HOME/golang
export GOROOT=$(brew --prefix go)/libexec

# homebrew in general
PATH="/usr/local/bin:/usr/local/sbin:$PATH"

# home directory stuff
PATH="$HOME/bin:$HOME/.scripts:$PATH"

# ruby gems
PATH="$(brew --prefix ruby)/bin:$PATH"

PATH=$PATH:$GOPATH/bin
PATH=$PATH:$GOROOT/bin
PATH=$PATH:$GRAILS_HOME/bin
PATH=$PATH:$ANDROID_HOME/tools:$ANDROID_HOME/platform-tools:$ANDROID_NDK_HOME
PATH=$PATH:$GOPATH/bin
PATH=$PATH:$ORACLE_HOME
PATH=$PATH:$SONAR_RUNNER_HOME/bin
PATH=$PATH:$AIR_HOME/bin
PATH=$PATH:/usr/local/heroku/bin
PATH=$PATH:$HOME/.rvm/bin # Add RVM to PATH for scripting

export PATH

[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm" # Load RVM into a shell session *as a function*
